.DroppableAreaPreview
  display inline

.DroppableAreaImageHolder
  float left
  position: relative



.DroppableAreaImageHolder:before
  content: "Drop Your Image"
  color: #919191;
  border: 3px dashed #919191;
  box-shadow: 0 0 4px #919191;
  background: #f4f4f4;
  font-family: monospace
  pointer-events: none
  position: absolute
  z-index: 1
  display: flex
  justify-content: center
  text-align: center
  align-items: center
  font-size: 20px
  top: -2px;
  bottom: -2px
  right: -2px
  left: -2px

.DroppableAreaImageHolderCircular:before
  border-radius 100%

.DroppableAreaPreview:before
  content "filedrop"
  position absolute
  z-index 1
  width: 100%
  height: 100%

.DroppableAreaPreview
  display inline

.DroppableAreaImageHolder
  float left
  position relative

.DroppableAreaImageHolder:before
  content "Drop Your Image"
  color blue
  border 0.1em dashed blue
  background white
  pointer-events none
  position absolute
  z-index 1
  display flex
  justify-content center
  text-align center
  align-items center
  top 0
  bottom 0
  right 0
  left 0
  margin 0.3em
  border-radius 4px

.DroppableAreaImageHolderCircular:before
  border-radius 100%

.DroppableAreaPreview:before
  content "filedrop"
  position absolute
  z-index 1
  width 100%
  height 100%
